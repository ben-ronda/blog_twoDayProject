{{#if addNewComment}}
  <h1>New Comment</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Your Name</label>
          {{input value=name id="name"}}
        </div>

        <div class="form-group">
          <label for="detail">Enter Your Comment</label>
          {{input value=detail id="detail"}}
        </div>

        <button {{action 'commentSave1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
