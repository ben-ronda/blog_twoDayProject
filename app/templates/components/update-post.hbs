{{#if updatePostForm}}
  <h1>Update {{post.title}}</h1>
  <form>
    <div class="form-group">
      <label for="title">Title:</label>
      {{input class="form-control" value=post.title id="title"}}
    </div>
    <div class="form-group">
      <label for="author">Author:</label>
      {{input class="form-control" value=post.author id="author"}}
    </div>
    <div class="form-group">
      <label for="content">Content:</label>
      {{input class="form-control" value=post.content id="content"}}
    </div>
    <div class="form-group">
      <label for="image">Image:</label>
      {{input class="form-control" value=post.image id="image"}}
    </div>
    <button class="btn btn-warning" {{action 'update' post}}>UPDATE</button>

  </form>
{{else}}
  <button class="btn btn-success" {{action "updatePostForm"}}>Update</button>
{{/if}}
