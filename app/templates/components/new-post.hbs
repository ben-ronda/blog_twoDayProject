{{#if addNewPost}}
  <h1>New Post</h1>
  <form class="form-group">
    <div>
      <label for="title">Title:</label>
      {{input value=title id="title"}}
    </div>
    <div>
      <label for="author">Author:</label>
      {{input value=author id="author"}}
    </div>
    <div>
      <label for="content">Content:</label>
      {{input value=content id="content"}}
    </div>
    <div>
      <label for="image">Image:</label>
      {{input value=image id="image"}}
    </div>
    <button {{action 'save1'}}>POST</button>

  </form>
{{else}}
  <button class="btn btn-success"{{action "postFormShow"}}>New Post</button>
{{/if}}
